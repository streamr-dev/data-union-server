{
  "name": "streamr-community-products",
  "version": "0.1.0",
  "description": "Backend node for servicing the Streamr Marketplace community products",
  "main": "./scripts/start_server.js",
  "scripts": {
    "start": "node ./scripts/start_server.js",
    "inspect": "node --inspect-brk ./scripts/start_server.js",
    "lint": "eslint src test scripts",
    "flatten": "etherlime --solcVersion=0.4.24 flatten CommunityProduct.sol",
    "build-contracts": "etherlime --solcVersion=0.4.24 compile",
    "docker-build": "docker build -t streamr/streamr-community-products:local .",
    "docker-tag-dev": "docker tag streamr/streamr-community-products:local streamr/streamr-community-products:dev",
    "unit-tests": "mocha test/unit --exit",
    "integration-tests": "mocha test/integration --exit",
    "system-tests": "mocha test/system/engine-and-editor-api.js --exit",
    "contract-tests": "npm run build-contracts && etherlime test --solcVersion=0.4.24 test/contracts",
    "test": "npm run unit-tests && npm run integration-tests && npm run contract-tests"
  },
  "author": "Streamr Network AG",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 10.14.0",
    "npm": ">= 6.4.1"
  },
  "dependencies": {
    "@sentry/node": "5.11.2",
    "bn.js": "5.1.1",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "8.2.0",
    "etherlime": "2.2.4",
    "ethers": "4.0.43",
    "exit-hook": "2.2.0",
    "express": "4.17.1",
    "ganache-cli": "6.8.2",
    "monoplasma": "0.1.10",
    "morgan": "1.9.1",
    "mz": "2.7.0",
    "p-all": "2.1.0",
    "streamr-client": "3.1.2"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "ganache-core": "2.9.2",
    "husky": "4.2.1",
    "mocha": "7.0.1",
    "node-fetch": "2.6.0",
    "sinon": "8.1.1"
  }
}
