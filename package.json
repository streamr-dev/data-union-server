{
  "name": "streamr-community-products",
  "version": "0.1.0",
  "description": "Backend node for servicing the Streamr Marketplace community products",
  "main": "start_server.js",
  "scripts": {
    "start": "node start_server.js",
    "lint": "./node_modules/.bin/eslint *.js src test",
    "flatten": "./node_modules/.bin/etherlime --solcVersion=0.4.24 flatten CommunityProduct.sol",
    "build-contracts": "./node_modules/.bin/etherlime --solcVersion=0.4.24 compile",
    "unit-tests": "./node_modules/.bin/mocha test/unit --exit",
    "integration-tests": "./node_modules/.bin/mocha test/integration --exit",
    "contract-tests": "npm run build-contracts && ./node_modules/.bin/etherlime test --solcVersion=0.4.24 test/contracts",
    "test": "npm run unit-tests && npm run integration-tests && npm run contract-tests"
  },
  "author": "Streamr Network AG",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">= 10.14.0",
    "npm": ">= 6.4.1"
  },
  "dependencies": {
    "@sentry/node": "^5.4.0",
    "bn.js": "4.11.8",
    "etherlime": "^1.1.1",
    "ethers": "^4.0.27",
    "exit-hook": "^2.2.0",
    "ganache-cli": "^6.4.3",
    "husky": "^3.0.5",
    "monoplasma": "0.1.8",
    "streamr-client": "^2.2.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "ganache-core": "^2.5.6",
    "mocha": "^6.1.3",
    "node-fetch": "^2.6.0",
    "sinon": "^7.3.2"
  }
}
